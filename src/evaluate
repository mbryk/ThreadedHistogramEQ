#!/bin/bash

#USAGE: runAllScripts [-m|-M numMasters] [-w|-W numWorkers (per Master)]
# 	[-c|-C numClients]

#Defaults:
numMasters=1
numWorkers=1
numClients=1

#Options:
while [[ $# > 1 ]]
do
opt="$1"
shift

case $opt in
    -m|-M)
    numMasters="$1"
    shift
    ;;
    -w|-W)
    numWorkers="$1"
    shift
    ;;
    -c|-C)
    numClients="$1"
    shift
    ;;
    *)
            # unknown option
    ;;
esac
done

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"


totalTime=0
for (( i = 0; i<${numClients}; i++))
do

    cd "${DIR}/Client/out"

    #new=$( nc -l 1200 )
    new=$( cat TEST_${i} )
    totalTime=$( bc <<< "${totalTime} + ${new}" )
    rm TEST_${i}
done

echo $totalTime

cd "${DIR}/Client/imDir/"
for file in ./*.jpg
do
    FILESIZE=$(stat -c%s "$file")
done

totalProcessedBytes=$(( ${FILESIZE} * ${numClients} ))
echo ${totalProcessedBytes}

totalThroughout=$( bc <<< "${totalProcessedBytes}/${totalTime}" )
echo $totalThroughout

